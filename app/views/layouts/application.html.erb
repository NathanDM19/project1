<!DOCTYPE html>
<html>
  <head>
    <title>Game</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>Game</h1>
    <hr>
    <% if @current_user.present? %>
      Welcome <%= link_to @current_user.username, profile_path %>
      |
      <%= link_to "Logout", login_path, method: :delete %>
      <%= link_to "Character Selection", characters_path, class: "playButton" %>
      <%= link_to "Game", game_path, class: "playButton" %>
      |
      Current character:
      <% if @current_character.present?%>
      <%= @current_character.name %>
      <% else %>
      None
      <% end %>
    <% else %>
      <%= link_to "Login", login_path %>
      |
      <%= link_to "Sign Up", new_user_path %>
    <% end %>
    <hr>
    <%= yield %>
  </body>
</html>
